                <tr>
                    <td>1</td>
                    <td>Dr. John Doe</td>
                    <td>Kardiologi</td>
                    <td>
                        <a href="/dokter/edit/1" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/dokter/hapus/1" class="btn btn-danger btn-sm">Hapus</a>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Dr. Jane Smith</td>
                    <td>Dermatologi</td>
                    <td>
                        <a href="/dokter/edit/2" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/dokter/hapus/2" class="btn btn-danger btn-sm">Hapus</a>
                    </td>
                </tr>
            </tbody>
        </table>
        <a href="/dokter/tambah" class="btn btn-success">Tambah Dokter</a>


    <!-- Bootstrap JS and Popper.js (for modal dialogs, dropdowns, etc.) -->
